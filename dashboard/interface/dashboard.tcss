#status_bar {
    dock: bottom;
    height: 1;
    color: $text-accent;
    background: $surface;
    padding: 0;
    margin: 1;
    width: 100%;
}

#schema_tree {
    width: 30%;
    height: 100%;
    border: $primary;
    background: $surface;
}

#schema_display {
    width: 30%; 
    height: 100%;
    border: $primary;
    background: $surface;
}

.probe-container {
    height: 1;
    margin-bottom: 1;
}

#timestep_widget {
    height: 5;
    border: $primary;
    background: $surface;
}

#aggregators_widget {
    height: 8;
    border: $primary;
    background: $surface;
}

#log_stream {
    border: $primary;
    background: $surface;
    height: 1fr;
    width: 1fr;
    color: $foreground;
}

#cmdbox {
    dock: top;
    height: 5;
    border: $primary;
    width: 100%;
}

#cmdbox-input {
    height: 3;
    border: $boost;
}

Switch {
    height: 1;
    width: auto;
    padding: 0;
    padding-right: 3;
    border: none;
}

.label {
    height: 1;
    content-align: center middle;
    width: auto;
}

#plot {
    height: 30;
    width: 1fr;
}

#orca-text {
    align: center middle;
    content-align: center middle;
    color: $text-accent;
    border: $text-accent;
    width: 80;
    height: 20;
}

#orca-container {
    content-align: center middle;
    width: 80;
    height: 20;
}

#orca_screen {
    align: center middle;
}